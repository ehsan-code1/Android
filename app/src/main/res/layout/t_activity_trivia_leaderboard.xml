<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_grey"
    tools:context=".trivia.leaderboard.TriviaActivityLeaderboard">

  <include
      android:id="@+id/t_header"
      layout="@layout/t_common_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/t_guideline_l"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.15"/>

  <FrameLayout
      app:layout_constraintTop_toBottomOf="@id/t_header"
      app:layout_constraintStart_toStartOf="@id/t_guideline_l"
      app:layout_constraintEnd_toEndOf="@id/t_guideline_r"
      app:layout_constraintBottom_toBottomOf="parent"
      android:id="@+id/t_leaderboard_frame"
      android:layout_width="0dp"
      android:layout_marginTop="10dp"
      android:layout_height="0dp"/>

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/t_guideline_r"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.85"/>

  </androidx.constraintlayout.widget.ConstraintLayout>