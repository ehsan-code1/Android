<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".trivia.quiz.TriviaQuestionItemFragment">

    <androidx.cardview.widget.CardView
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/purple_500"
        card_view:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/t_quiz_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="30dp"
                android:textSize="25sp"
                android:text=""
                android:textColor="@color/white" />

            <LinearLayout
                card_view:layout_constraintTop_toBottomOf="@id/t_quiz_question"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="30dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/t_quiz_answer_one"
                    android:layout_width="300dp"
                    android:minHeight="50dp"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_700"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/t_quiz_answer_two"
                    android:layout_width="300dp"
                    android:minHeight="50dp"
                    android:textSize="20sp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_700"
                    android:text=""
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/t_quiz_answer_three"
                    android:layout_width="300dp"
                    android:minHeight="50dp"
                    android:textSize="20sp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_700"
                    android:text=""
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/t_quiz_answer_four"
                    android:layout_width="300dp"
                    android:minHeight="50dp"
                    android:textSize="20sp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_700"
                    android:text=""
                    android:textColor="@color/white" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>